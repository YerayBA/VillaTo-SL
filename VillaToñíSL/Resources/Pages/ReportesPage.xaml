<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillaToñíSL.Resources.Pages.ReportesPage">
    <VerticalStackLayout Padding="250" Spacing="20">
        <Label Text="Reporte de problemas" VerticalOptions="Center"  HorizontalOptions="Center"/>
        <Entry x:Name="TitutoProblema" BackgroundColor="Honeydew"  WidthRequest="500"/>
        <Label Text="Descripción del problema" VerticalOptions="Center"  HorizontalOptions="Center"/>
        <Editor x:Name="DescripcionProblema" MaxLength="1000" HeightRequest="200"  WidthRequest="500" BackgroundColor="Lavender" />
        <Button Text="Enviar" VerticalOptions="End" HorizontalOptions="Center" BackgroundColor="LightGreen" TextColor="Black" Clicked="OnEnviarProblemaClicked" />
    </VerticalStackLayout>
</ContentPage>