<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillaToñíSL.Resources.Pages.ConfiguracionPages.SuscripcionPage"
             Title="SuscripcionPage">
    <VerticalStackLayout Spacing="20" Padding="200">
        <Label 
            Text="Seleccione su plan de suscripción"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Large"/>
        <RadioButton 
            Content="Mensual - 5.99€" 
            GroupName="Suscripcion" 
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <RadioButton 
            Content="Cada 6 meses - 4.99€" 
            GroupName="Suscripcion" 
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <RadioButton 
            Content="Anual - 48€" 
            GroupName="Suscripcion" 
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Button Text="Suscribirse"
            Background="LightGreen"
            TextColor="Black"
            WidthRequest="300"
            AbsoluteLayout.LayoutBounds="0.5, 0.2, 275, 75"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Clicked="suscribirse"/>
    </VerticalStackLayout>
</ContentPage>